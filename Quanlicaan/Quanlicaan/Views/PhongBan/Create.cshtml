@model Quanlicaan.Models.ModelADO.PhongBanModel

@{
    ViewBag.Title = "Thêm mới phòng ban";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" style="padding:10px">
           Tên phòng ban
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenPB, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                @Html.ValidationMessageFor(model => model.TenPB, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success active" style="margin-top:20px" />
            </div>
        </div>
    </div>
}

<button class="btn btn-outline-warning">
    <a href="~/PhongBan/Index" style="text-decoration:none">Cancel</a>
</button>
