@using System.Data
@model Quanlicaan.Models.ModelsPage.PersonalModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<!DOCTYPE html>

<html>
<head>
    <title>EditPass</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="~/css/main.css" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Roboto:400,100,300,700' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="~/css/fonteawsome/fontawesome-free-6.1.1-web/css/all.min.css">
</head>
<body>

        <div class="container">
            <section class="get-in-touch">
                <h3 class="title" style=" font-size : 2.8rem;">Thay đổi thông tin mật khẩu</h3>
                <div style=" display: flex; justify-content: space-around; align-items: center">
                    <h4 style=" color: #fd7e14d4; font-family: emoji;"> Ngày : @DateTime.Now.ToString("dd-MM-yyyy")</h4>
                </div>

                <div class="col-md-12">
                    @using (Html.BeginForm("EditPass", "NhanVien", FormMethod.Post))
                    {
                            @* Box chỉnh sửa thông tin mật khẩu *@
                        <div class="table-wrap personal_info">
                            <div style="display:flex; align-items:flex-end">
                                <span style="width:12rem; margin-right: 3rem; font-size: 1.3rem; font-family: emoji; font-weight: bold"> Username:</span>
                                @Html.TextAreaFor(m => m.username, new { @class = "input-text", @type = "text" })
                            </div>

                            <div style="display:flex; align-items:flex-end">
                                <span style="width:12rem; margin-right: 3rem; font-size: 1.3rem; font-family: emoji; font-weight: bold"> Mật khẩu:</span>
                                @Html.PasswordFor(m => m.upassword, new { @class = "input-text", @value = Model.upassword })
                            </div>
                      

                        </div>

                        <div class="form-field col-lg-12 btn_submit_back">
                            <button type="submit" id="btnSave" class="submit-btn" onclick="show()"> Lưu thông tin</button>
                            <button class="submit-btn "><a class="back" href=" @Url.Action("PerSonal","NhanVien") "> Quay lại</a>  </button>
                        </div>

                        
                    }
                </div>
            </section>
        </div>

    <script>
        function show()
        {
            alert("Bạn đã cập nhật thành công");
        }
    </script>

</body>
</html>
