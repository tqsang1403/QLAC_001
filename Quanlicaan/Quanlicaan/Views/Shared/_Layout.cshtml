@using Quanlicaan.Models.Session
@{ 
    var info = (UserSession)Session["UserSession"];
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/layoutcss.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/main.css">
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>


    @RenderSection("head", required: false)
</head>

<body>

    <section class="clearfix header">
        <div class="container-fluid">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <a class="navbar-brand" href="@Url.Action("Home","Home")"> Quản lý ca ăn</a>
                    <div class="collapse navbar-collapse header_layout" id="navbarSupportedContent">
                        <ul class="navbar-nav ">
                            @if (info.IDRoleUser == 1)
                            {
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Quản lý
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item" href="@Url.Action("Show","NhanVien")">Nhân viên</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("ShowAll","PhongBan")">Phòng ban</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("ShowCaAn","CaAn")">Ca ăn</a></li>
                    </ul>
                </li>
}

                            <li class="nav-item dropdown ">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Quản lý ca ăn
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li> <a class="dropdown-item" href="@Url.Action("DkiCanhan","Dangkycaan")"> Đăng kí suất ăn cá nhân</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Tapthe","Dangkycaan")"> Đăng kí suất ăn tập thể</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Thống kê
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" href="@Url.Action("Canhan","Baocao")">Cá nhân</a></li>
                                    @if (info.IDRoleUser == 1)
                                    {
                                         <li><a class="dropdown-item" href="@Url.Action("Baocaotheongay","Baocao")">Theo ngày</a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("Baocaotheothang","Baocao")">Theo Tháng</a></li>
}
                                </ul>
                            </li>
                        </ul>

                        <div>

                            <p style="  margin: auto;  color: #e7710c;font-weight: 600;"> Xin chào  @info.hoTen</p>
                        </div>
                        <div>

                            <a class="dropdown-item" href="@Url.Action("PerSonal","NhanVien")">Thông tin cá nhân</a>

                        </div>

                        @using (Html.BeginForm("logOut", "Login", FormMethod.Post, new { @class = "nav-item dropdown" }))
                        {
            <button type="submit" class="submit-btn"> Đăng xuất </button>}

                    </div>
                </div>
            </nav>
        </div>
    </section>
    <section class="clearfix-maincontent py-1">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </section>
    <section class="clearfix-footer bg-gradient">
        <div class="container-fluid text-black-50 text-center">
            <p> Created by Van Toan </p>
        </div>
    </section>


    @RenderSection("footer", required: false)
</body></html>
