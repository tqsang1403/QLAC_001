@model Quanlicaan.Models.ModelADO.NhanVienModel

@using System.Data
@{
    ViewBag.Title = "EditDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";

    <link href="~/css/one.css" rel="stylesheet" />
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        


        <div class="form-group">
            Tên đăng nhập:
            <div class="col-md-10">
                @Html.DisplayFor(model => model.username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            Mật khẩu cũ:
            <div class="col-md-10">
                @Html.DisplayFor(model => model.upassword, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            Mật khẩu mới:
            <div class="col-md-10">
                @Html.PasswordFor(model => model.upassword, new { htmlAttributes = new { @class = "form-control", @required = "required", @minlength = "6" } })
                @Html.ValidationMessageFor(model => model.upassword, "", new { @class = "text-danger", @minlength = "6" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success active" />
            </div>
        </div>
    </div>
}
<button class="btn btn-outline-warning">
    <a href="~/UserLogin/Details" style="text-decoration:none">Cancel</a>
</button>

